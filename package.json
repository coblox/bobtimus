{
  "name": "bobtimus",
  "version": "1.0.0",
  "description": "an autobot that automatically handles swaps as Bob",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "(cd node_modules/testcontainers && yarn > /dev/null 2>&1 || exit 0;)",
    "check": "tsc",
    "gen": "mkdir -p ./gen && json2ts -i ./schema/siren.schema.json -o ./gen/siren.d.ts",
    "btc": "mocha 'tests/*bitcoin*.ts' --reporter spec --require ts-node/register",
    "start": "yarn run build && ts-node -- ./src/index.ts",
    "start-dev": "yarn run build && nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "fix": "tslint -p . --fix; prettier --write '{src,tests}/**/*.ts' '*.json'",
    "lint": "tslint -p .",
    "prettier": "prettier --check '{src,tests}/**/*.ts' '*.json'",
    "test": "mocha 'tests/**/*.ts' --reporter spec --require ts-node/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coblox/bobtimus.git"
  },
  "keywords": [],
  "author": "The CoBloX Team <team@coblox.tech>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/coblox/bobtimus/issues"
  },
  "homepage": "https://github.com/coblox/bobtimus#readme",
  "dependencies": {
    "@badrap/result": "^0.2.4",
    "@types/urijs": "^1.19.0",
    "big.js": "^5.2.2",
    "bitcoin-core": "^2.0.0",
    "bitcoinjs-lib": "^5.0.3",
    "coinselect": "^3.1.11",
    "debug": "^4.1.1",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "rxjs": "^6.5.1",
    "toml": "^3.0.0",
    "underscore": "^1.9.1",
    "urijs": "^1.19.1"
  },
  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "@types/bitcoinjs-lib": "^4.0.1",
    "@types/chai": "^4.1.7",
    "@types/debug": "^4.1.4",
    "@types/mocha": "^5.2.6",
    "@types/nock": "^10.0.1",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.16",
    "@types/underscore": "^1.8.16",
    "@types/urijs": "^1.19.0",
    "chai": "^4.2.0",
    "json-schema-to-typescript": "^6.1.3",
    "mocha": "^6.1.4",
    "nock": "^10.0.6",
    "nodemon": "^1.19.0",
    "testcontainers": "https://github.com/coblox/testcontainers-node#add-start-cmd",
    "ts-node": "^8.1.0",
    "tsc": "^1.20150623.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  }
}
