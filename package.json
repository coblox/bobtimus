{
  "name": "bobtimus",
  "version": "1.0.0",
  "description": "an autobot that automatically handles swaps as Bob",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "git config core.hooksPath .githooks; yarn run gen",
    "check": "tsc",
    "gen": "mkdir -p ./gen && json2ts -i ./schema/siren.schema.json -o ./gen/siren.d.ts",
    "start": "ts-node -- ./src/index.ts",
    "start-dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "fix": "tslint -p . --fix && prettier --write '**/*.{ts,js,json,yml}'",
    "lint": "tslint -p .",
    "prettier": "prettier --check '**/*.{ts,js,json,yml}'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coblox/bobtimus.git"
  },
  "keywords": [],
  "author": "The CoBloX Team <team@coblox.tech>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/coblox/bobtimus/issues"
  },
  "homepage": "https://github.com/coblox/bobtimus#readme",
  "dependencies": {
    "@badrap/result": "^0.2.4",
    "@google-cloud/logging-winston": "^2.0.1",
    "@iarna/toml": "^2.2.3",
    "big.js": "^5.2.2",
    "bip39": "^3.0.2",
    "bitcoin-core": "^3.0.0",
    "bitcoinjs-lib": "^5.1.5",
    "coinselect": "^3.1.11",
    "ethereumjs-tx": "^2.1.1",
    "ethereumjs-util": "^6.1.0",
    "express": "^4.17.1",
    "readline": "^1.3.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "toml": "^3.0.0",
    "urijs": "^1.19.1",
    "web3": "^1.2.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "@types/bip39": "^2.4.2",
    "@types/bitcoinjs-lib": "^4.0.1",
    "@types/dockerode": "^2.5.16",
    "@types/ethereumjs-tx": "^1.0.1",
    "@types/ethereumjs-util": "^5.2.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/mockdate": "^2.0.0",
    "@types/nock": "^11.1.0",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.17",
    "@types/tmp": "^0.1.0",
    "@types/underscore": "^1.8.16",
    "@types/urijs": "^1.19.0",
    "@types/web3": "^1.0.19",
    "jest": "^24.9.0",
    "json-schema-to-typescript": "^7.1.0",
    "nock": "^11.1.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.17.1",
    "testcontainers": "^2.0.0",
    "tmp": "^0.1.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  }
